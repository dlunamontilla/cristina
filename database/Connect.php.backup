<?php
namespace database;

class Connect {
    /**
     * @var \PDO Conexi칩n con la base de datos.
     */
    private $pdo;
    
    /**
     * @param string $username Usuario de la base de datos. El usuario
     * por defecto es root.
     * 
     * @param string $password Contrase침a de la base de datos. Por defecto
     * la contrase침a se encuentra en blanco.
     */
    public function __construct(string $username = "root", string $password = "") {
        
        try {
            $this->pdo = new \PDO('mysql:host=localhost; dbname=gimnasio', $username, $password);
        }catch(\PDOException $error) {
            print_r($error);
        }
    }

    /**
     * @return \PDO Devuelve un objeto PDO
     */
    public function getPDO(): \PDO {
        return $this->pdo;
    }

    /**
     * Le indica al cliente que hace la petici칩n que los datos a recibir es
     * en formato JSON.
     * 
     * @return void 
     */
    public function setJSON() {
        header("content-type: application/json; charset=utf-8");
    }
}